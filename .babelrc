{
    "presets": [
        [
            "latest",
            {
                "es2015": {
                    "modules": false
                }
            }
        ],
        "react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        "transform-decorators-legacy",
        "transform-class-properties",
        "transform-object-rest-spread",
        "syntax-dynamic-import"
    ],
    "env": {
        "test": {
            "presets": [["env"], "react"],
            "plugins": [
                "transform-es2015-modules-commonjs",
                "syntax-dynamic-import",
                "transform-decorators-legacy",
                "transform-class-properties",
                "transform-object-rest-spread"
            ]
        }
    }
}
